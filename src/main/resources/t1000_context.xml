<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="sony_context.xml"/>
    <import resource="toshiba_context.xml"/>
    <!--  <import resource="database_context.xml"/>-->

    <bean id="t1000" class="ua.javabegin.spring.impl.robot.T1000"
          p:hand-ref="sonyHand"
          p:leg-ref="sonyLeg"
          p:head-ref="toshibaHead" scope="prototype">

        <constructor-arg value="yellow" type="java.lang.String"/>
        <constructor-arg value="2005" type="int"/>
        <constructor-arg value="true" type="boolean"/>
    </bean>

    <bean id="t1000Empty" class="ua.javabegin.spring.impl.robot.T1000">
        <constructor-arg ref="sonyLeg"/>
        <constructor-arg ref="toshibaHand"/>
        <constructor-arg ref="toshibaHead"/>
    </bean>

    <bean id="t1000All" class="ua.javabegin.spring.impl.robot.T1000" parent="baseModel">

        <constructor-arg value="green"/>
        <constructor-arg value="2015"/>
        <constructor-arg value="true"/>

        <property name="leg" ref="sonyLeg"/>
    </bean>

    <bean id="baseModel" abstract="true">
        <constructor-arg ref="sonyHand"/>
        <constructor-arg ref="toshibaLeg"/>
        <constructor-arg ref="toshibaHead"/>
    </bean>
    <!-- Replace method -->
    <bean id="t1000Replace" class="ua.javabegin.spring.impl.robot.T1000">
        <constructor-arg value="Red"/>
        <constructor-arg value="2018"/>
        <constructor-arg value="true"/>
        <replaced-method name="fire" replacer="replaceBean" />
    </bean>

    <bean id="replaceBean" class="ua.javabegin.spring.impl.replace.RobotReplaceMethod"/>



    <!-- <bean class="ua.javabegin.spring.main.MyBeanPostProccessor"/>-->
</beans>